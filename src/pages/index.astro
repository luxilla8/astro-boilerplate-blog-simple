---
import { getCollection, render } from 'astro:content';
import Page from '../layouts/Page.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/Icon.astro';
import { siteConfig } from '../config/site';

// Find the page marked as homepage
const pages = await getCollection('pages');
const homepage = pages.find((page) => page.data.isHomepage && !page.data.draft);

// Render the homepage content if found
let Content;
if (homepage) {
  const rendered = await render(homepage);
  Content = rendered.Content;
}
---

{homepage ? (
  <Page page={homepage}>
    <Content />
  </Page>
) : (
  <BaseLayout title={siteConfig.name} description={siteConfig.description}>
    <!-- Default Homepage when no page is set -->
    <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-40"></div>
      <div class="relative max-w-6xl mx-auto px-6 md:px-8 py-28 md:py-36">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            {siteConfig.name}
          </h1>
          <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed">
            {siteConfig.description}
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/blog"
              class="inline-flex items-center justify-center px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition-colors"
            >
              Read the Blog
              <Icon name="arrow-right" class="ml-2 w-5 h-5" />
            </a>
            <a
              href="/about"
              class="inline-flex items-center justify-center px-6 py-3 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-lg transition-colors backdrop-blur-sm"
            >
              Learn More
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 md:py-28 bg-gray-50">
      <div class="max-w-6xl mx-auto px-6 md:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Built for the Modern Web
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            This site is optimized for performance, search engines, and AI discovery.
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-3">
          <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
            <div class="w-12 h-12 bg-primary-100 text-primary-600 rounded-xl flex items-center justify-center mb-4">
              <Icon name="lightning" class="w-6 h-6" />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Lightning Fast</h3>
            <p class="text-gray-600">
              Zero JavaScript by default. Pages load instantly with perfect Core Web Vitals scores.
            </p>
          </div>

          <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
            <div class="w-12 h-12 bg-primary-100 text-primary-600 rounded-xl flex items-center justify-center mb-4">
              <Icon name="search" class="w-6 h-6" />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">SEO Optimized</h3>
            <p class="text-gray-600">
              Structured data, semantic HTML, and proper meta tags for maximum search visibility.
            </p>
          </div>

          <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
            <div class="w-12 h-12 bg-primary-100 text-primary-600 rounded-xl flex items-center justify-center mb-4">
              <Icon name="monitor" class="w-6 h-6" />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">AI Discoverable</h3>
            <p class="text-gray-600">
              Optimized for AI crawlers with llms.txt and clean, parseable content structure.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 md:py-28">
      <div class="max-w-4xl mx-auto px-6 md:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Ready to get started?
        </h2>
        <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
          Create your homepage in Keystatic by marking any page as "Set as Homepage".
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href="/keystatic"
            class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-lg transition-colors"
          >
            Open Keystatic
          </a>
          <a
            href="/blog"
            class="inline-flex items-center px-6 py-3 border border-gray-300 hover:bg-gray-50 text-gray-700 font-semibold rounded-lg transition-colors"
          >
            View Blog
          </a>
        </div>
      </div>
    </section>
  </BaseLayout>
)}
