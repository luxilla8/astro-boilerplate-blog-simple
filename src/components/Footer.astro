---
import { getCollection } from 'astro:content';
import { siteConfig } from '../config/site';
import Icon from './Icon.astro';

const currentYear = new Date().getFullYear();

// Get pages for footer nav (exclude homepage)
const pages = await getCollection('pages');
const footerPages = pages
  .filter((page) => page.data.showInNav && !page.data.draft && !page.data.isHomepage)
  .sort((a, b) => (a.data.navOrder || 100) - (b.data.navOrder || 100))
  .slice(0, 4)
  .map((page) => ({
    href: `/${page.id}`,
    label: page.data.title,
  }));

// Filter out empty social links
const socialLinks = Object.entries(siteConfig.social)
  .filter(([, value]) => value)
  .map(([platform, value]) => ({
    platform,
    url: value.startsWith('http') ? value : `https://${platform}.com/${value.replace('@', '')}`,
  }));
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-6xl mx-auto px-6 md:px-8 py-16">
    <div class="grid gap-10 md:gap-12 md:grid-cols-3">
      <!-- Brand -->
      <div>
        <a href="/" class="flex items-center gap-2 text-xl font-bold text-white mb-4">
          <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-700 rounded-lg flex items-center justify-center text-white text-sm font-bold">
            {siteConfig.name.charAt(0)}
          </div>
          {siteConfig.name}
        </a>
        <p class="text-sm text-gray-400 max-w-xs mb-6">
          {siteConfig.tagline}
        </p>
        {socialLinks.length > 0 && (
          <div class="flex gap-4">
            {socialLinks.map(({ platform, url }) => (
              <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label={`Follow on ${platform}`}
              >
                <Icon name={platform} />
              </a>
            ))}
          </div>
        )}
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Navigation</h3>
        <ul class="space-y-3" role="list">
          <li>
            <a href="/" class="text-sm hover:text-white transition-colors">Home</a>
          </li>
          <li>
            <a href="/blog" class="text-sm hover:text-white transition-colors">Blog</a>
          </li>
          {footerPages.map((page) => (
            <li>
              <a href={page.href} class="text-sm hover:text-white transition-colors">
                {page.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Subscribe / Contact -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">Stay Updated</h3>
        <p class="text-sm text-gray-400 mb-4">
          Get the latest posts delivered right to your inbox.
        </p>
        {siteConfig.features.newsletter.enabled ? (
          <form action={siteConfig.features.newsletter.action} method="POST" class="flex gap-2">
            <input
              type="email"
              name="email"
              placeholder="Enter your email"
              required
              class="flex-1 px-4 py-2 bg-gray-800 border border-gray-700 rounded-lg text-sm text-white placeholder-gray-500 focus:outline-none focus:border-primary-500"
            />
            <button
              type="submit"
              class="px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white text-sm font-medium rounded-lg transition-colors"
            >
              Subscribe
            </button>
          </form>
        ) : (
          <a
            href="/blog"
            class="inline-flex items-center text-sm text-primary-400 hover:text-primary-300 transition-colors"
          >
            Browse all articles
            <Icon name="arrow-right" class="ml-1 w-4 h-4" />
          </a>
        )}
      </div>
    </div>

    <div class="mt-14 pt-10 border-t border-gray-800 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-gray-500">
        &copy; {currentYear} {siteConfig.name}. All rights reserved.
      </p>
      <p class="text-xs text-gray-600">
        Built with <a href="https://astro.build" class="hover:text-gray-400">Astro</a> &amp; <a href="https://keystatic.com" class="hover:text-gray-400">Keystatic</a>
      </p>
    </div>
  </div>
</footer>
