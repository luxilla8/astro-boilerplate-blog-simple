---
interface Props {
  page: {
    url: { prev?: string; next?: string; current: string };
    currentPage: number;
    lastPage: number;
  };
}

const { page } = Astro.props;
const { currentPage, lastPage } = page;

// Build page number list with ellipsis
function getPageNumbers(current: number, last: number): (number | '...')[] {
  if (last <= 7) {
    return Array.from({ length: last }, (_, i) => i + 1);
  }

  const pages: (number | '...')[] = [1];

  if (current > 3) {
    pages.push('...');
  }

  const start = Math.max(2, current - 1);
  const end = Math.min(last - 1, current + 1);

  for (let i = start; i <= end; i++) {
    pages.push(i);
  }

  if (current < last - 2) {
    pages.push('...');
  }

  pages.push(last);
  return pages;
}

const pageNumbers = getPageNumbers(currentPage, lastPage);

function pageUrl(num: number): string {
  if (num === 1) return '/blog';
  return `/blog/${num}`;
}
---

{lastPage > 1 && (
  <nav aria-label="Blog pagination" class="flex items-center justify-center gap-2 mt-16">
    {page.url.prev ? (
      <a
        href={page.url.prev}
        class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 dark:hover:border-gray-600 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        Previous
      </a>
    ) : (
      <span class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-gray-400 dark:text-gray-600 bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-800 rounded-lg cursor-not-allowed">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        Previous
      </span>
    )}

    <div class="flex items-center gap-1">
      {pageNumbers.map((num) =>
        num === '...' ? (
          <span class="px-2 py-2 text-sm text-gray-400 dark:text-gray-500">...</span>
        ) : num === currentPage ? (
          <span class="inline-flex items-center justify-center w-10 h-10 text-sm font-semibold text-white bg-primary-600 rounded-lg">
            {num}
          </span>
        ) : (
          <a
            href={pageUrl(num)}
            class="inline-flex items-center justify-center w-10 h-10 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 dark:hover:border-gray-600 transition-colors"
          >
            {num}
          </a>
        )
      )}
    </div>

    {page.url.next ? (
      <a
        href={page.url.next}
        class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 dark:hover:border-gray-600 transition-colors"
      >
        Next
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
      </a>
    ) : (
      <span class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-gray-400 dark:text-gray-600 bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-800 rounded-lg cursor-not-allowed">
        Next
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
      </span>
    )}
  </nav>
)}
