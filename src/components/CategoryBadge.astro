---
export interface Props {
  category: string;
  name: string;
  color?: 'blue' | 'green' | 'purple' | 'orange' | 'red' | 'gray';
  size?: 'sm' | 'md';
  linked?: boolean;
}

const { category, name, color = 'blue', size = 'md', linked = true } = Astro.props;

const colorClasses = {
  blue: 'bg-blue-100 text-blue-800 hover:bg-blue-200',
  green: 'bg-green-100 text-green-800 hover:bg-green-200',
  purple: 'bg-purple-100 text-purple-800 hover:bg-purple-200',
  orange: 'bg-orange-100 text-orange-800 hover:bg-orange-200',
  red: 'bg-red-100 text-red-800 hover:bg-red-200',
  gray: 'bg-gray-100 text-gray-800 hover:bg-gray-200',
};

const sizeClasses = {
  sm: 'text-xs px-2 py-0.5',
  md: 'text-sm px-2.5 py-1',
};

const baseClasses = `inline-flex items-center font-medium rounded-full transition-colors ${colorClasses[color]} ${sizeClasses[size]}`;
---

{linked ? (
  <a href={`/blog/category/${category}`} class={baseClasses}>
    {name}
  </a>
) : (
  <span class={baseClasses}>
    {name}
  </span>
)}
